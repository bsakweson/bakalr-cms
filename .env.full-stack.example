# ===========================================
# Full Stack Environment Configuration
# Copy to .env and fill in your values
# ===========================================

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DB_ADMIN_USERNAME=postgres
DB_ADMIN_PASSWORD=your_secure_admin_password

# CMS Database
CMS_DB_NAME=bakalr_cms
CMS_DB_USER=bakalr
CMS_DB_PASSWORD=your_cms_db_password

# Boutique Database
BOUTIQUE_DB_NAME=boutique
BOUTIQUE_DB_USER=boutique
BOUTIQUE_DB_PASSWORD=your_boutique_db_password

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=your_redis_password

# ===========================================
# RABBITMQ
# ===========================================
AMQP_USERNAME=rabbitmq
AMQP_PASSWORD=your_rabbitmq_password

# ===========================================
# MINIO (S3-compatible storage)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password

# ===========================================
# MEILISEARCH
# ===========================================
MEILI_MASTER_KEY=your_meilisearch_master_key

# ===========================================
# CMS SECURITY
# ===========================================
SECRET_KEY=your_very_long_secret_key_at_least_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_at_least_32_chars

# Public URL for the CMS (used in emails, callbacks, etc.)
CMS_PUBLIC_URL=http://localhost

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8000

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com

# ===========================================
# STRIPE (Optional - for payment service)
# ===========================================
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# ===========================================
# CMS API KEY (for content-service)
# ===========================================
CMS_API_KEY=
