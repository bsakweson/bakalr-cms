# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=sqlite:///./bakalr_cms.db
# For production: DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bakalr_cms

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (CHANGE THESE IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-please-use-a-secure-random-string-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-please-use-a-secure-random-string-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Storage Backend Configuration
# Options: "local" or "s3"
STORAGE_BACKEND=local

# File Upload (Local Storage)
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# AWS S3 Configuration (used when STORAGE_BACKEND=s3)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# S3-Compatible Services (MinIO, DigitalOcean Spaces, etc.)
# S3_ENDPOINT_URL=https://your-s3-compatible-service.com
# S3_USE_SSL=true

# CDN Configuration (optional, for S3)
# S3_PUBLIC_URL=https://cdn.yourdomain.com

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
# S3_PUBLIC_URL=https://cdn.yourdomain.com

# Translation Configuration
# Translation provider: libretranslate, google, deepl, or argos
TRANSLATION_PROVIDER=libretranslate

# LibreTranslate (Free, Open Source - Recommended)
LIBRETRANSLATE_URL=http://localhost:5001
# No API key required for LibreTranslate!

# Google Translate (500k chars/month free)
# GOOGLE_TRANSLATE_API_KEY=

# DeepL (500k chars/month free, best quality)
# DEEPL_API_KEY=
# DEEPL_API_URL=https://api-free.deepl.com/v2/translate

DEFAULT_LANGUAGE=en

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Meilisearch (Search Engine)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MEILI_MASTER_KEY=change-this-secure-key-min-32-chars
MEILI_HOST=http://localhost:7700
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=

# Docker PostgreSQL (required for docker-compose)
POSTGRES_DB=bakalr_cms
POSTGRES_USER=bakalr
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
POSTGRES_PASSWORD=change-this-secure-password

# Docker Redis (required for docker-compose)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
REDIS_PASSWORD=change-this-secure-password

# Email/SMTP Configuration (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

SMS_ACCESS_KEY_ID=jsjhsjhfksdjfhsjfkhj
SMS_SECRET_ACCESS_KEY=safsdfsdgjdjkfjghhfkg
SMS_REGION=us-east-2
SMS_TYPE=Transactional
SMS_SENDER_ID=Bakalr


# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=1000/hour;100/minute
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# GraphQL Security Settings
GRAPHQL_MAX_DEPTH=5
GRAPHQL_MAX_COMPLEXITY=1000
GRAPHQL_TIMEOUT_SECONDS=10
