{
  "api_id": "organization_reference_data",
  "name": "Organization Reference Data",
  "description": "Custom departments, roles, and statuses that organizations can define for their boutique operations",
  "fields_schema": [
    {
      "name": "data_type",
      "type": "select",
      "required": true,
      "unique": false,
      "localized": false,
      "default": null,
      "validation": null,
      "help_text": "Type of reference data",
      "options": [
        { "value": "department", "label": "Department" },
        { "value": "role", "label": "Employee Role" },
        { "value": "status", "label": "Employment Status" }
      ]
    },
    {
      "name": "code",
      "type": "text",
      "required": true,
      "unique": false,
      "localized": false,
      "default": null,
      "validation": "^[A-Z][A-Z0-9_]*$",
      "help_text": "Unique code in UPPER_SNAKE_CASE (e.g., SALES, MANAGER, ACTIVE)"
    },
    {
      "name": "label",
      "type": "text",
      "required": true,
      "unique": false,
      "localized": true,
      "default": null,
      "validation": null,
      "help_text": "Display label for the option"
    },
    {
      "name": "description",
      "type": "textarea",
      "required": false,
      "unique": false,
      "localized": true,
      "default": null,
      "validation": null,
      "help_text": "Optional description of this option"
    },
    {
      "name": "icon",
      "type": "text",
      "required": false,
      "unique": false,
      "localized": false,
      "default": null,
      "validation": null,
      "help_text": "Icon name (e.g., lucide icon name)"
    },
    {
      "name": "color",
      "type": "text",
      "required": false,
      "unique": false,
      "localized": false,
      "default": null,
      "validation": "^#[0-9A-Fa-f]{6}$",
      "help_text": "Color code in hex format (e.g., #FF5733)"
    },
    {
      "name": "metadata",
      "type": "json",
      "required": false,
      "unique": false,
      "localized": false,
      "default": "{}",
      "validation": null,
      "help_text": "Additional properties (e.g., managerLevel for roles)"
    },
    {
      "name": "is_system",
      "type": "boolean",
      "required": false,
      "unique": false,
      "localized": false,
      "default": "false",
      "validation": null,
      "help_text": "Whether this is a system default (cannot be deleted)"
    },
    {
      "name": "is_active",
      "type": "boolean",
      "required": false,
      "unique": false,
      "localized": false,
      "default": "true",
      "validation": null,
      "help_text": "Whether this option is currently active"
    },
    {
      "name": "sort_order",
      "type": "number",
      "required": false,
      "unique": false,
      "localized": false,
      "default": "0",
      "validation": null,
      "help_text": "Display order (lower numbers appear first)"
    }
  ],
  "settings": {
    "draft_by_default": false,
    "enable_versioning": false,
    "enable_localization": true
  }
}
