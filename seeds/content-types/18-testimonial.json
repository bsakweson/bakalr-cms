{
  "api_id": "testimonial",
  "name": "Testimonial",
  "description": "Customer testimonials and reviews",
  "fields_schema": [
    {
      "name": "customer_name",
      "type": "text",
      "required": true,
      "unique": false,
      "localized": false,
      "default": null,
      "validation": null,
      "help_text": "Customer name - NOT translated (proper noun)"
    },
    {
      "name": "customer_title",
      "type": "text",
      "required": false,
      "unique": false,
      "localized": true,
      "default": null,
      "validation": null,
      "help_text": "Title/badge - IS translated"
    },
    {
      "name": "quote",
      "type": "textarea",
      "required": true,
      "unique": false,
      "localized": true,
      "default": null,
      "validation": null,
      "help_text": "Testimonial quote - IS translated"
    },
    {
      "name": "rating",
      "type": "number",
      "required": false,
      "unique": false,
      "localized": false,
      "default": null,
      "validation": {
        "min": 1,
        "max": 5
      },
      "help_text": "Star rating 1-5"
    },
    {
      "name": "avatar_id",
      "type": "media",
      "required": false,
      "unique": false,
      "localized": false,
      "default": null,
      "validation": null,
      "help_text": "Customer photo"
    },
    {
      "name": "featured",
      "type": "boolean",
      "required": false,
      "unique": false,
      "localized": false,
      "default": false,
      "validation": null,
      "help_text": "Show in featured"
    }
  ],
  "is_published": true
}
