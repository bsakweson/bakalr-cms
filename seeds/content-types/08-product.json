{
  "name": "Product",
  "api_id": "product",
  "description": "Product catalog entries with variants, media, and specifications",
  "display_field": "name",
  "fields": [
    {
      "name": "name",
      "type": "text",
      "required": true,
      "localized": true,
      "help_text": "Product name - IS translated"
    },
    {
      "name": "sku",
      "type": "text",
      "required": true,
      "unique": true,
      "localized": false,
      "help_text": "SKU - NOT translated"
    },
    {
      "name": "description",
      "type": "textarea",
      "required": false,
      "localized": true,
      "help_text": "Full description - IS translated"
    },
    {
      "name": "short_description",
      "type": "text",
      "required": false,
      "localized": true,
      "help_text": "Brief description - IS translated"
    },
    {
      "name": "base_price_cents",
      "type": "number",
      "required": true,
      "help_text": "Base price in cents"
    },
    {
      "name": "compare_at_price_cents",
      "type": "number",
      "required": false,
      "help_text": "Original price in cents"
    },
    {
      "name": "currency",
      "type": "text",
      "required": false,
      "localized": false,
      "default": "USD",
      "help_text": "Currency code - NOT translated"
    },
    {
      "name": "category_id",
      "type": "reference",
      "required": false,
      "help_text": "Primary category"
    },
    {
      "name": "brand_id",
      "type": "reference",
      "required": false,
      "help_text": "Brand"
    },
    {
      "name": "tags",
      "type": "json",
      "required": false,
      "localized": false,
      "help_text": "Tags array - NOT translated (used for filtering)"
    },
    {
      "name": "media_gallery",
      "type": "json",
      "required": false,
      "localized": false,
      "help_text": "Media items array - NOT translated"
    },
    {
      "name": "available_colors",
      "type": "json",
      "required": false,
      "localized": true,
      "help_text": "Color options - names ARE translated"
    },
    {
      "name": "available_sizes",
      "type": "json",
      "required": false,
      "localized": true,
      "help_text": "Size options - names ARE translated"
    },
    {
      "name": "specifications",
      "type": "json",
      "required": false,
      "localized": true,
      "help_text": "Specs array [{label, value}] - BOTH label and value ARE translated"
    },
    {
      "name": "ingredients",
      "type": "textarea",
      "required": false,
      "localized": true,
      "help_text": "Ingredients list - IS translated"
    },
    {
      "name": "how_to_use",
      "type": "textarea",
      "required": false,
      "localized": true,
      "help_text": "Usage instructions - IS translated"
    },
    {
      "name": "weight_grams",
      "type": "number",
      "required": false,
      "help_text": "Weight in grams"
    },
    {
      "name": "dimensions",
      "type": "json",
      "required": false,
      "localized": false,
      "help_text": "Dimensions object - NOT translated"
    },
    {
      "name": "featured",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "Featured product"
    },
    {
      "name": "new_arrival",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "New arrival"
    },
    {
      "name": "bestseller",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "Bestseller"
    }
  ]
}
