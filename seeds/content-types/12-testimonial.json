{
  "name": "Testimonial",
  "api_id": "testimonial",
  "description": "Customer testimonials and reviews",
  "display_field": "customer_name",
  "fields": [
    {
      "name": "customer_name",
      "type": "text",
      "required": true,
      "localized": false,
      "help_text": "Customer name - NOT translated (proper noun)"
    },
    {
      "name": "customer_title",
      "type": "text",
      "required": false,
      "localized": true,
      "help_text": "Title/badge - IS translated"
    },
    {
      "name": "quote",
      "type": "textarea",
      "required": true,
      "localized": true,
      "help_text": "Testimonial quote - IS translated"
    },
    {
      "name": "rating",
      "type": "number",
      "required": false,
      "validation": {"min": 1, "max": 5},
      "help_text": "Star rating 1-5"
    },
    {
      "name": "avatar_id",
      "type": "media",
      "required": false,
      "help_text": "Customer photo"
    },
    {
      "name": "featured",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "Show in featured"
    }
  ]
}
