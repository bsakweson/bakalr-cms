{
  "name": "Product Variant",
  "api_id": "product_variant",
  "description": "Product variants for size/color combinations",
  "display_field": "variant_name",
  "fields": [
    {
      "name": "sku",
      "type": "text",
      "required": true,
      "unique": true,
      "localized": false,
      "help_text": "Variant SKU - NOT translated"
    },
    {
      "name": "variant_name",
      "type": "text",
      "required": true,
      "localized": true,
      "help_text": "Display name - IS translated"
    },
    {
      "name": "product_id",
      "type": "reference",
      "required": true,
      "help_text": "Parent product"
    },
    {
      "name": "color",
      "type": "json",
      "required": false,
      "localized": true,
      "help_text": "Color object - name IS translated"
    },
    {
      "name": "size",
      "type": "json",
      "required": false,
      "localized": true,
      "help_text": "Size object - name IS translated"
    },
    {
      "name": "price_modifier_cents",
      "type": "number",
      "required": false,
      "default": 0,
      "help_text": "Price adjustment in cents"
    },
    {
      "name": "media_gallery",
      "type": "json",
      "required": false,
      "localized": false,
      "help_text": "Variant images - NOT translated"
    },
    {
      "name": "weight_modifier_grams",
      "type": "number",
      "required": false,
      "default": 0,
      "help_text": "Weight adjustment"
    },
    {
      "name": "barcode",
      "type": "text",
      "required": false,
      "localized": false,
      "help_text": "UPC/EAN - NOT translated"
    }
  ]
}
