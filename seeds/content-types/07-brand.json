{
  "name": "Brand",
  "api_id": "brand",
  "description": "Product brands with metadata for filtering",
  "display_field": "name",
  "fields": [
    {
      "name": "name",
      "type": "text",
      "required": true,
      "localized": false,
      "help_text": "Brand name - NOT translated (proper noun)"
    },
    {
      "name": "description",
      "type": "textarea",
      "required": false,
      "localized": true,
      "help_text": "Brand description - IS translated"
    },
    {
      "name": "logo_id",
      "type": "media",
      "required": false,
      "help_text": "Brand logo"
    },
    {
      "name": "banner_image_id",
      "type": "media",
      "required": false,
      "help_text": "Brand page banner"
    },
    {
      "name": "website_url",
      "type": "text",
      "required": false,
      "localized": false,
      "help_text": "Website URL - NOT translated"
    },
    {
      "name": "featured",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "Show in featured"
    },
    {
      "name": "display_order",
      "type": "number",
      "required": false,
      "default": 0,
      "help_text": "Sort order"
    },
    {
      "name": "country_of_origin",
      "type": "text",
      "required": false,
      "localized": true,
      "help_text": "Country - IS translated"
    },
    {
      "name": "is_black_owned",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "Black-owned brand"
    },
    {
      "name": "is_organic",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "Uses organic ingredients"
    },
    {
      "name": "is_cruelty_free",
      "type": "boolean",
      "required": false,
      "default": false,
      "help_text": "Cruelty-free"
    }
  ]
}
