{
  "name": "Navigation",
  "api_id": "navigation",
  "description": "Navigation menus for header, footer, and mobile with translatable UI strings",
  "display_field": "menu_key",
  "fields": [
    {
      "name": "menu_key",
      "type": "text",
      "required": true,
      "unique": true,
      "localized": false,
      "help_text": "Unique key: 'header', 'footer', 'mobile' - NOT translated"
    },
    {
      "name": "items",
      "type": "json",
      "required": true,
      "localized": true,
      "help_text": "Menu items array with label, href, order, icon, and optional children"
    },
    {
      "name": "sign_in_text",
      "type": "text",
      "required": false,
      "localized": true,
      "help_text": "Sign In button text (header only)"
    },
    {
      "name": "sign_up_text",
      "type": "text",
      "required": false,
      "localized": true,
      "help_text": "Sign Up button text (header only)"
    },
    {
      "name": "search_placeholder",
      "type": "text",
      "required": false,
      "localized": true,
      "help_text": "Search input placeholder text (header only)"
    },
    {
      "name": "view_cart_text",
      "type": "text",
      "required": false,
      "localized": true,
      "help_text": "View Cart tooltip/button text (header only)"
    }
  ]
}
